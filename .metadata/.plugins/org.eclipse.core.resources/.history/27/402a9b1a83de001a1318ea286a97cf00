package Main;

import java.util.Scanner;

import geometria.Circunferencia;


public class main {
	public static void main(String[] args) {
		
		Scanner sc = new Scanner (System.in);
		
		Circunferencia x= new Circunferencia();
	
		
		System.out.println("Digite o raio: ");
		x.raio= sc.nextDouble();
	
		System.out.println("Circunferencia = "+ x.calcularCircunferencia());
		System.out.println("Volume = "+ x.calcularVolume());
		System.out.printf("Pi  %.2f= "+ Math.PI);
		
		sc.close();
	}

}
