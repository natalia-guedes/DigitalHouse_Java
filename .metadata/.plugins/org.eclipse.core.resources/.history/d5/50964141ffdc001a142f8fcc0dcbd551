package principal;

import java.util.Scanner;

import dados.Funcionaio;

public class main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner (System.in);
		
		Funcionaio x= new Funcionaio();
		
		System.out.print("Nome: ");
		x.nome= sc.next();
		System.out.print("Salário bruto: ");
		x.salarioBruto= sc.nextDouble();
		System.out.print("Qual é a taxa? ");
		x.taxa= sc.nextDouble();
		System.out.print(" ");
		
		System.out.println("Funcionário: "+ x.nome + ", R$ "+ x.salarioLiquido());
		System.out.print(" ");
	
		System.out.println("Qual é a porcentagem de aumento do salário? ");
		x.aumentoDoSalario(sc.nextDouble());
		System.out.println("Aumento do salário: "+ x.nome + ", R$ "+ x.salarioLiquido());
		
		sc.close();
	}

}
